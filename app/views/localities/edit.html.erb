<h3>Edit Locality</h3>

<%= form_for @locality do |f| %>
<% if @locality.errors.any? %>
<h4>These errors prohibited the form from being saved: </h4>
<ul style="color:green;">
<% @locality.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
	</ul>
	<% end %>
	
	<label>Name</label><br/>
	<%= f.text_field :name %><br/>1+

	<%= f.submit %>

	<% end %>